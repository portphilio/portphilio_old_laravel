{
    "name": "portphilio/portphilio",
    "description": "A web-based app for managing portfolios.",
    "keywords": ["portphilio", "portfolio", "learning", "assessment", "job-seeking"],
    "license": "MIT",
    "authors": [
        {
            "name": "Morgan Benton",
            "email": "morgan@portphil.io",
            "role": "Creator, Developer"
        }
    ],
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "5.1.*",
        "guzzlehttp/guzzle": "~5.3",
        "cartalyst/sentinel": "2.0.*",
        "cartalyst/sentinel-social": "2.0.*@dev",
        "thomaswelton/laravel-gravatar": "~1.0",
        "cviebrock/eloquent-sluggable": "^3.0",
        "esensi/model": "^0.5.5",
        "intervention/image": "^2.3",
        "greggilbert/recaptcha": "^2.0",
        "caffeinated/menus": "~2.0",
        "cartalyst/attributes": "dev-laravel"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/morphatic/attributes"
        },
        {
            "type": "composer",
            "url": "https://packages.cartalyst.com"
        }
    ],
    "require-dev": {
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~4.0",
        "phpspec/phpspec": "~2.1",
        "behat/behat": "^3.0",
        "behat/mink": "^1.6",
        "behat/mink-extension": "^2.0",
        "laracasts/behat-laravel-extension": "^1.0",
        "barryvdh/laravel-debugbar": "dev-master",
        "doctrine/dbal": "^2.5"
    },
    "autoload": {
        "classmap": [
            "database",
            "database/migrations"
        ],
        "psr-4": {
            "Portphilio\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php"
        ]
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ]
    },
    "config": {
        "preferred-install": "dist"
    }
}
